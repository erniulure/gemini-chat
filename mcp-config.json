{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "env": {
        "PLAYWRIGHT_HEADLESS": "false",
        "PLAYWRIGHT_TIMEOUT": "30000"
      }
    },
    "browser-automation": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp", "--headless", "false", "--port", "3001"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
}
