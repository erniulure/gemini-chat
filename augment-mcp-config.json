{
  "mcpServers": {
    "playwright-browser": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "env": {
        "PLAYWRIGHT_HEADLESS": "false",
        "PLAYWRIGHT_TIMEOUT": "30000",
        "NODE_ENV": "development"
      }
    },
    "playwright-headless": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp", "--headless"],
      "env": {
        "PLAYWRIGHT_HEADLESS": "true",
        "PLAYWRIGHT_TIMEOUT": "15000"
      }
    }
  }
}
